<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@color/input_background"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/receive_path"
        android:layout_width="268dp"
        android:layout_height="wrap_content"
        android:hint="填写接受文件存储的路径"
        android:fontFamily="@font/mono"
        android:textSize="12sp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp" />

    <ScrollView
        android:id="@+id/receive_log_parent"
        android:layout_width="268dp"
        android:layout_height="400dp"
        android:layout_marginBottom="12dp"
        android:scrollbars="none"
        android:visibility="gone">

        <TextView
            android:id="@+id/new_log"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_span="10000"
            android:background="@drawable/input_box"
            android:gravity="top|left"
            android:minHeight="200dp"
            android:text="" />
    </ScrollView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:text=""
            android:textColor="#BDBDBD"
            android:textSize="10dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/confirm"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:paddingHorizontal="0dp"
            android:fontFamily="@font/mono"
            android:textColor="@color/white"
            android:background="@drawable/btn_operation_select_bg"
            android:text="拉取数据" />
    </LinearLayout>
</LinearLayout>

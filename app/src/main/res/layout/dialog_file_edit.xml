<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- 文件基本信息区域：保留原有配置 -->
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/mono"
        android:textSize="12sp"
        android:textColor="#333333"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/tv_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/mono"
        android:textSize="12sp"
        android:textColor="#333333"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/tv_path"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/mono"
        android:textSize="12sp"
        android:textColor="#333333"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/tv_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/mono"
        android:textSize="12sp"
        android:textColor="#333333"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/tv_modify_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/mono"
        android:textSize="12sp"
        android:textColor="#333333"
        android:layout_marginBottom="8dp"/>

    <!-- 原有通用输入框：用于重命名/移动的地址输入 -->
    <EditText
        android:id="@+id/et_common_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入内容"
        android:fontFamily="@font/mono"
        android:textSize="12sp"
        android:visibility="gone"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"/>

    <!-- 新增：独立的ZIP密码输入框（仅解密时显示） -->
    <EditText
        android:id="@+id/et_zip_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入ZIP密码（无密码则留空）"
        android:fontFamily="@font/mono"
        android:textSize="12sp"
        android:inputType="textPassword"
        android:visibility="gone"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"/>

    <!-- 中转计划Spinner -->
    <Spinner
        android:id="@+id/sp_transfer_plan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp" />

    <!-- 操作区域：保留原有配置 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_operation_select"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:text="选择操作"
            android:fontFamily="@font/mono"
            android:textColor="#FFFFFF"
            android:textSize="11sp"
            android:background="@drawable/btn_operation_select_bg"
            android:paddingHorizontal="0dp"
            android:paddingVertical="0dp"
            android:elevation="0dp"
            android:stateListAnimator="@null"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_confirm"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:text="确认"
            android:fontFamily="@font/mono"
            android:textColor="#FFFFFF"
            android:textSize="11sp"
            android:background="@drawable/btn_confirm_bg"
            android:paddingHorizontal="0dp"
            android:paddingVertical="0dp"
            android:elevation="0dp"
            android:stateListAnimator="@null"
            android:visibility="gone"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>
</LinearLayout>